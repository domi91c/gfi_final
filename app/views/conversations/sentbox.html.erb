<h1>Sent</h1>
<table class="table table-striped">
  <tbody>
  <% @conversationssent.each do |conversation| %>
      <tr>


        <td>
          <div style="margin-left: 5px" class="round-image-50">
            <%= image_tag(conversation.originator.logo.url(:small) ) %>
          </div>
          <%= link_to conversation.originator.name, user_path(conversation.originator) %></td>

        <td><%= 'unread' if conversation.is_unread?(current_user) %></td>


            <td><%= link_to conversation.subject, conversation_path(conversation) %></td>
            <!--<%= link_to conversation.messages %>-->

            <td><%= conversation.updated_at.strftime("%a, %m/%e/%Y %I:%M %p") %></td>

            <td><%= link_to "Reply", {:controller => "messages", :action => "reply", :id => conversation.id}, :title => "Reply" %></td>

            <td> <%= link_to "Move to Trash", {:controller => "conversations", :action => "trash", :id => conversation.id}, :title => "Move to Trash", :method => 'post' %></td>

            </tr>
            </tbody>

  <% end %>


  <td><%= link_to "Go to Inbox", {:controller => "conversations", :action => "index"}, :title => "Reply" %></td>

  </table>