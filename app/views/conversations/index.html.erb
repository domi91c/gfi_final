<h1>Inbox</h1>




<table class=" table-striped table-responsive">

  <tbody>

  <% @conversations.each do |conversation| %>

      <tr>
  <td style="padding-right: 30px">
    <div style="margin-left: 5px" class="round-image-50">
      <%= image_tag(conversation.originator.logo.url(:small)) %>
    </div>
    <br>
    <%= link_to conversation.originator.name, :style => "padding-right: 40px" %></td>

  <td><% if conversation.is_unread?(current_user) %>
        <div class="col-lg-12 input-group">
          <span class="glyphicon glyphicon-envelope" style="font-size: 20px; padding-right: 20px; padding-left: 20px"></span>

        </div>
    <% end %>

  </td>
  <td><%= link_to conversation.subject, conversation_path(conversation) %></td>
  <!--<%= link_to conversation.messages %>-->

  <td style="padding: 20px"><%= conversation.created_at.strftime("%H:%M %b %d") %></td>

  <td style="padding: 10px"><%= link_to "Reply", {:controller => "messages", :action => "reply", :id => conversation.id}, :title => "Reply" %></td>

  <td style="padding: 10px"> <%= link_to "Move to Trash", {:controller => "conversations", :action => "trash", :id => conversation.id}, :title => "Move to Trash", :method => 'post' %>

  </td>
      </tr>
<% end %>
  </tbody>
</table>




