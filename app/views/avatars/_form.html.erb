<div class="avatar-update">
  <%= render partial: 'avatars/current',
             object: avatarable,
             as: :avatarable %>

  <%= form_for avatarable, url: avatar_path, multipart: true do |f| %>
    <%= f.file_field :logo, input_html: { hidden: true } %>

  <% end %>
</div>

<%= render partial: 'avatars/progress' %>

<%= javascript_tag do %>
  $(function() {
    AvatarForRails.edit();
  });
<% end %>
